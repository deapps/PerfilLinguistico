        android:layout_height="75dp"
        android:textSize="30dp"
        android:text="Serie 6"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:textSize="30dp"
        android:text="Serie 7"
